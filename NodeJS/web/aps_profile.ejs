<html>
    <head>
    	<title> <%=user.org.username%> | Account Settings </title>
		<link rel="icon" type="image/gif" href="<%=context%>/resources/logo.png" />
        
        <link type="text/css" href="<%=context%>/libraries/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet">
        <script src="<%=context%>/libraries/jquery/jquery-3.2.1.js" type="application/javascript"> </script>
        <script src="https://www.gstatic.com/firebasejs/4.8.0/firebase.js"></script>

        <!-- SCRIPTS -->
        <script> var context = "<%=context%>"; </script>
        <script src="<%=context%>/scripts/modal.js" type="application/javascript"> </script>
        <script src="<%=context%>/scripts/logout.js" type="application/javascript"> </script>
        <script src="<%=context%>/scripts/account_settings.js" type = "application/javascript"> </script>
        <script src="<%=context%>/scripts/org_form.js" type="application/javascript"> </script>
       
        <!-- STYLES -->
        <link type="text/css" href="<%=context%>/styles/modal.css" rel=stylesheet>
        <link type="text/css" href="<%=context%>/styles/content.css" rel="stylesheet">
        <link type="text/css" href="<%=context%>/styles/navigation.css" rel="stylesheet">
        <link type="text/css" href="<%=context%>/styles/dashboard-style.css" rel="stylesheet">
        <link type="text/css" href="<%=context%>/styles/account_settings.css" rel="stylesheet">
    </head>
    <body>
        <!-- BACKGROUNDS AND OVERLAYS -->
        <div id="main-bg"></div>
        <div id="main_overlay"></div>
        
        <!-- MAIN VIEW START -->
        <div id="main">
            <% var menu = 4 %>
            <% include sections/navigation %>
            
            <!-- MAIN CONTENT START -->
            <div id="main_content">
                <!-- MAIN HEADER START -->
                <div id="main_header">
                    <!-- MAIN HEADER TITLE -->
                    <h1 class="body_label head"> Account Settings </h1>
                </div>
                
                <!-- MAIN BODY START -->
                <div id="main_body">
                    <div class = "option">
                        <label class = "title"> Submission Message </label>
                        <textarea id = "sub-form-message" rows = "10"></textarea>
                        <div class = "subopt">
                            <button id = "editsave-submission" class="editAPS"> 
                                Edit Message
                            </button>
                            <button id = "cancel" class="editAPS"> 
                                Cancel
                            </button>
                        </div>
                    </div>
                    <div class = "option">
                        <label class = "title"> Account Details </label>
                        <div class = "subopt">
                            <label class = "label"> Name </label>
                            <input disabled id = "name" type = "text" class = "name profile field" name="name" value ="<%=user.name%>">
                        </div>

                        <div class = "subopt">
                            <label class = "label"> Username </label>
                            <input disabled id = "username" type = "text" class = "username profile field" name="username" value = "<%=user.username%>">
                        </div>
                        
                        <div class = "subopt">
                            <label class = "label"> Email </label>
                            <input disabled id = "email" type = "email" class = "email profile field" name="email" value = "<%=user.email%>">
                        </div>
                        
                        <div class = "subopt">
                            <label class = "label"> Contact </label>
                            <input disabled id = "name" type = "number" class = "contact profile field" name="contact" value = "<%=user.contact%>">
                        </div>
                        
                        <label id = "edit-error" class = "error"></label>

                        <div class = "subopt">
                            <button id = "editsave" class="editAPS"> 
                                Edit
                                <i class = "fa fa-pencil"> </i>
                            </button>
                        </div>
                    </div>
                    
                    <div class = "option">
                        <label class = "title"> Change Password </label>
                        <p class="label"> Old Password </p>
                        <input class="field" id="oldpass" type="password" name="oldpass">
                        <p class="label"> New Password </p>
                        <input class="field" id="newpass" type="password" name="newpass">
                        <p class="label"> Confirm New Password </p>
                        <input class="field" id="cnewpass" type="password" name="cnewpass">
                        <p class="label" id="error_msg"></p>
                        <button id="change_pass"> Change Password </button>
                    </div>
                </div>
                <!-- MAIN BODY END -->
            </div>
            <!-- MAIN CONTENT END -->
        </div>
        <!-- MAIN VIEW END -->
    </body>
</html>