<html>
	<head>
        <!-- CONFIGURATION -->
        <title> APS | Login </title>
        <link rel="icon" type="image/gif" href="<%=context%>/resources/logo.png" />
        
        <!-- LIBRARIES -->
        <script src="<%=context%>/libraries/jquery/jquery-3.2.1.js" type="application/javascript"> </script>

        <!-- STYLES -->
        <link type="text/css" href="<%=context%>/styles/modal.css" rel=stylesheet>
        <link type="text/css" href="<%=context%>/styles/login.css" rel="stylesheet"/>
        
    	<!-- SCRIPTS -->
        <script> var context = "<%=context%>" </script>
    	<script src="<%=context%>/scripts/modal.js" type = "application/javascript"> </script>
    	<script src="<%=context%>/scripts/login.js" type = "application/javascript"> </script>
    </head>
    
    <body>
        <!-- MAIN BG -->
        <div id="main_bg"></div>
        <!-- MAIN OVERLAY -->
        <div id="main_overlay"></div>
        
        <!-- MAIN LOGIN CONTAINER START -->
        <div id="login_container">
            <!-- LOGIN MAIN DIV START -->
            <div class = "login-main">
                <!-- HEADER OVERLAY -->
                <div class = "label-header-overlay"> </div>
                <!-- HEADER IMAGE -->
                <div class = "label-header"> </div>
                
                <!-- LOGIN CONTENT START -->
                <div id="login_content">
                    <!-- LOGIN ICON HOLDER -->
                    <div class = "icon-holder"> </div>
                    <!-- DLSU LOGO -->
                    <img id = "dlsu-logo" src="<%=context%>/resources/logo.png"/>
                    <!-- ICON HOLDER OVERLAY -->
                    <div class = "icon-holder-overlay"> </div>
                    <!-- FORM LOGIN START -->
                    <form id="loginform" action="login" method="post">
                        <!-- LABEL HEADER -->
                        <p class="label header"> Welcome Back Lasallian! </p>
                        
                        <!-- USERNAME -->
                        <p class="label"> Username </p>
                        <input id = "login_username" class="login username" type="text" name="username"/>
                        
                        <!-- PASSWORD -->
                        <p class="label"> Password </p>
                        <input id = "login_password" class="login password" type="password" name="password"/>
                        
                        <!-- ERROR MESSAGE -->
                        <p class="label" id="login_msg"> </p>
                        
                        <!-- LOGIN MESSAGE -->
                        <button id="btn_login" type="submit" value="LOGIN"> 
                            Login 
                            <img src = "<%=context%>/resources/ajax-loader.gif" id = "loader-ajax">
                        </button>
                        <br/>
                        <!-- CHANGE PASSWORD LINK -->
                        <a class="label" id="forgot_msg"> Forgot Password? </a>
                    </form>
                    <!-- FORM LOGIN END -->
                    
                    <!-- FORGOT PASSWORD START -->
                    <form id="forgotpassword" action="forgotPassword" method="post">
                        <!-- LABEL HEADER -->
                        <p class="label header"> Forgot password? </p>
                        
                        <!-- EMAIL -->
                        <p class="label"> Please enter your email: </p>
                        <input type="email" id = "email" class = "login forgotpassword">

                        <!-- FORGOT PASSWORD MESSAGE -->
                        <p class = "label" id = "forgot_msg_error"> </p>

                        <!-- SUBMIT BUTTON -->
                        <button class = "btn" id="btn_forgot" type="submit"> Send </button>

                        <!-- SUBMIT BUTTON -->
                        <button class = "btn" id="btn_back"> Cancel </button>
                    </form>
                    <!-- FORGOT PASSWORD END -->
                </div>
                <!-- LOGIN CONTENT END -->
                
                
            </div>
            <!-- LOGIN MAIN DIV END -->
        </div>
        <!-- MAIN LOGIN CONTAINER END -->
    </body>
</html>